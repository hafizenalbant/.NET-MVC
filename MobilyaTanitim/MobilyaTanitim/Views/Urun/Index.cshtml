@using MobilyaTanitim.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Esyalar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ADI</th>
        @*<th>SİL</th>*@
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <td>@urn.EşyaAd</td>
            @*<td><a href="/URUN/SIL/@urn.Eşyaid" class="btn btn-danger">SİL</a></td>*@
            <td><a href="/URUN/UrunGetir/@urn.Eşyaid" class="btn btn-success">GÜNCELLE</a></td>
            <td><a href="/URUN/SIL/@urn.Eşyaid"></a>@Html.ActionLink("SİL ", "SIL", new { id = urn.Eşyaid }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğinize Emin Misiniz?')" })</td>
        </tr>
        }
    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Urun/UrunEkle/" class="btn btn-primary">YENİ URUN EKLE</a>