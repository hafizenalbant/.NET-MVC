@using MobilyaTanitim.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        @*<th>SİL</th>*@
        <th>GÜNCELLE</th>
        <th>SİL</th>

    </tr>

    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.Kategoriid</th>
                <td>@ktgr.KategoriAd</td>
                @*<td><a href="/KATEGORI/SIL/@ktgr.Kategoriid" class="btn btn-danger">SİL</a></td>*@
                <td><a href="/KATEGORI/KategoriGetir/@ktgr.Kategoriid" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/KATEGORI/SIL/@ktgr.Kategoriid"></a>@Html.ActionLink("SİL ", "SIL", new { id = ktgr.Kategoriid }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğinize Emin Misiniz?')" })</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/KATEGORI/YENIKATEGORI/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>